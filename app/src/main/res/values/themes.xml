<resources>
    <!-- Base application theme. -->
    <style name="Theme.DicodingMADEMovieCatalogue" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="ViewDetail" parent="Theme.DicodingMADEMovieCatalogue">
        <item name="android:background">@drawable/bg_gradient_transparent</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="DetailActivityTheme" parent="Theme.DicodingMADEMovieCatalogue">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="MainActivityTheme" parent="Theme.DicodingMADEMovieCatalogue">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--set layout splashscreen-->
    <style name="SplashTheme" parent="Theme.DicodingMADEMovieCatalogue">
        <!--icon in splashscreen-->
        <item name="android:windowBackground">@drawable/bg_splash_screen_light</item>
        <!-- Status bar color-->
        <item name="android:statusBarColor">@color/white</item>
        <!--Set text color in status bar to light-->
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>